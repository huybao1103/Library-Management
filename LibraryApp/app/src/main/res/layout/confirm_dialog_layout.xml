<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/Theme.Material3.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        android:gravity="end">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            app:boxStrokeColor="#ff7849"
            android:background="@drawable/border_radius_orange">

            <Button
                android:id="@+id/no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:background="@color/transparent"
                android:textAllCaps="false"
                android:textColor="#ff7849"
                android:drawableLeft="@drawable/baseline_close_24" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff7849"
            app:cardCornerRadius="5dp"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:background="@color/transparent"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/baseline_check_24" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
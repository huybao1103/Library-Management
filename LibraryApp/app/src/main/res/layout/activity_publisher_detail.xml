<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailPubImage"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/pub"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/detailPubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher Name: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/detailPubPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher Phone: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/detailPubName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/detailPubGmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher Gmail: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/detailPubPhone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/detailPubAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher Address: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/detailPubGmail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="BACK"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        />

</RelativeLayout>
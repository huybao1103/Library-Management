<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    android:background="#d6edfb"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:id="@+id/textViewTitle" android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:textStyle="bold" android:textSize="24sp" android:text="AUTHOR LIST"/>

<!--    <ImageView android:layout_height="50dp" android:layout_width="30dp" android:layout_marginTop="210dp" android:id="@+id/EditAu" android:contentDescription="TODO" android:src="@drawable/baseline_edit_24" android:layout_marginLeft="300dp"/>-->

<!--    <ImageView android:layout_height="70dp" android:layout_width="30dp" android:layout_marginTop="200dp" android:id="@+id/DeleteAu" android:contentDescription="TODO" android:src="@drawable/baseline_delete_24" android:layout_marginLeft="340dp"/>-->

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/buttonAddAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Add Author"
            android:background="#ff7849"
            android:textColor="#fff"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>

    <EditText
        android:background="@drawable/search"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_marginTop="80dp"
        android:id="@+id/SearchAu"
        android:textSize="16sp"
        android:hint="Search"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/baseline_search_24"
        android:visibility="invisible"/>

    <de.codecrafters.tableview.TableView
        android:id="@+id/table_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SearchAu"
        app:tableView_headerColor="#d6edfb"
        app:tableView_columnCount="4">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </de.codecrafters.tableview.TableView>
</RelativeLayout>